<h1 class="text-center pt-5 pb-3 text-warning fw-bold">Job Posting Form</h1>
<div class="pl-5" style="position: relative">
  <div class="p-5" style="margin-left: 10%">
    <img
      src="https://images.pexels.com/photos/261679/pexels-photo-261679.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
      alt="Job Pen Form"
      style="max-width: 60dvw"
    />
  </div>
  <div
    style="max-width: 600px; z-index: 1; position: absolute; right: 15%; top: 0"
  >
    <form action="/job/add" method="post" class="bg-dark rounded p-4">
      <div class="row mb-3">
        <label for="companyName" class="col col-form-label text-warning"
          >Company Name:</label
        >
        <div class="col">
          <input
            type="text"
            class="form-control"
            id="companyName"
            name="companyName"
            required
          />
        </div>
      </div>
      <div class="row mb-3">
        <label for="postTitle" class="col col-form-label text-warning"
          >Job Title:</label
        >
        <div class="col">
          <input
            type="text"
            class="form-control"
            id="postTitle"
            name="postTitle"
            required
          />
        </div>
      </div>
      <div class="row mb-3">
        <label for="requirements" class="col col-form-label text-warning"
          >Job Requirements:</label
        >
        <div class="col">
          <textarea
            class="form-control"
            id="requirements"
            name="requirements"
            rows="3"
            placeholder="Enter Keywords separated by , or space"
            required
          ></textarea>
        </div>
      </div>
      <div class="row mb-3">
        <label for="ctc" class="col col-form-label text-warning"
          >CTC (Cost to Company):</label
        >
        <div class="col">
          <input
            type="number"
            class="form-control"
            id="ctc"
            name="ctc"
            required
          />
        </div>
      </div>
      <div class="row mb-3">
        <label for="location" class="col col-form-label text-warning"
          >Job Location:</label
        >
        <div class="col">
          <input
            type="text"
            class="form-control"
            id="location"
            name="location"
            required
          />
        </div>
      </div>
      <div class="row mb-3">
        <label for="description" class="col col-form-label text-warning"
          >Job Description:</label
        >
        <div class="col">
          <textarea
            class="form-control"
            id="description"
            name="description"
            rows="5"
            required
          ></textarea>
        </div>
      </div>
      <div class="row mb-3">
        <label for="deadline" class="col col-form-label text-warning"
          >Application Deadline:</label
        >
        <div class="col">
          <input
            type="date"
            class="form-control"
            id="deadline"
            name="deadline"
            required
          />
        </div>
      </div>
      <div class="row mb-3">
        <label for="noOfOpenings" class="col col-form-label text-warning"
          >No. Of Openings:</label
        >
        <div class="col">
          <input
            type="number"
            class="form-control"
            id="noOfOpenings"
            name="noOfOpenings"
            required
          />
        </div>
      </div>

      <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-warning">Post Job</button>
      </div>
    </form>
  </div>
</div>
