<div>
  <h2 class="text-warning fw-bold text-center pt-5">Job Update Form</h2>
</div>

<div class="d-flex justify-content-center align-items-center p-2">
  <form
    action="/job/update/<%= job.id %>?_method=PUT"
    method="post"
    class="bg-dark rounded p-4"
    style="max-width: 600px"
  >
    <div class="row mb-3">
      <label for="companyName" class="col col-form-label text-warning"
        >Company Name:</label
      >
      <div class="col">
        <input
          type="text"
          class="form-control"
          id="companyName"
          name="companyName"
          value="<%= job.companyName %>"
          required
        />
      </div>
    </div>
    <div class="row mb-3">
      <label for="postTitle" class="col col-form-label text-warning"
        >Job Title:</label
      >
      <div class="col">
        <input
          type="text"
          class="form-control"
          id="postTitle"
          name="postTitle"
          value="<%= job.postTitle %>"
          required
        />
      </div>
    </div>
    <div class="row mb-3">
      <label for="requirements" class="col col-form-label text-warning"
        >Job Requirements:</label
      >
      <div class="col">
        <textarea
          class="form-control"
          id="requirements"
          name="requirements"
          rows="3"
          placeholder="Enter Keywords separated by , or space"
          required
        >
 <%= job.requirements %>
    </textarea
        >
      </div>
    </div>
    <div class="row mb-3">
      <label for="ctc" class="col col-form-label text-warning"
        >CTC (Cost to Company):</label
      >
      <div class="col">
        <input
          type="number"
          class="form-control"
          id="ctc"
          name="ctc"
          value="<%= job.ctc %>"
          required
        />
      </div>
    </div>
    <div class="row mb-3">
      <label for="location" class="col col-form-label text-warning"
        >Job Location:</label
      >
      <div class="col">
        <input
          type="text"
          class="form-control"
          id="location"
          name="location"
          value="<%= job.location %>"
          required
        />
      </div>
    </div>
    <div class="row mb-3">
      <label for="description" class="col col-form-label text-warning"
        >Job Description:</label
      >
      <div class="col">
        <textarea
          class="form-control"
          id="description"
          name="description"
          rows="5"
          required
        >
 <%= job.description %>
    </textarea
        >
      </div>
    </div>
    <div class="row mb-3">
      <label for="deadline" class="col col-form-label text-warning"
        >Application Deadline:</label
      >
      <div class="col">
        <input
          type="date"
          class="form-control"
          id="deadline"
          name="deadline"
          value="<%= job.deadline %>"
          required
        />
      </div>
    </div>
    <div class="row mb-3">
      <label for="noOfOpenings" class="col col-form-label text-warning"
        >No. Of Openings:</label
      >
      <div class="col">
        <input
          type="number"
          class="form-control"
          id="noOfOpenings"
          name="noOfOpenings"
          value="<%= job.noOfOpenings %>"
          required
        />
      </div>
    </div>
    <div class="d-flex justify-content-end">
      <button type="submit" class="btn btn-warning">Update</button>
    </div>
  </form>
</div>
